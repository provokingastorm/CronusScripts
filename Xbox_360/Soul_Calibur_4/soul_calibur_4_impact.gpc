// soul_calibur_4_impact.gpc

int run_script = 0;
int script_step = 0;

main
{
	if (get_val(XB1_LS))
	{
		run_script = 1;
	}
	
	if (get_val(XB1_RS))
	{
		run_script = 0;
	}
	
	if (run_script == 1)
	{
		combo_run(ExecuteScript);
	}
}

combo ExecuteScript
{
	set_val(XB360_RB, 100);
	wait(30);
	set_val(XB360_RB, 0);
	
	wait(300);
	
	set_val(XB360_A, 100);
	wait(30);
	set_val(XB360_A, 0);
}